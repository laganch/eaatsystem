  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="../top1.jpg" alt="Chania">
      <div class="carousel-caption">
        <h2 style="font-size: 2em">REGISTER WITH US TODAY!</p>
        	<a href="/pages/register"><i class="fa fa-mail btn btn-danger">Register Now</i></a>
      </div>
